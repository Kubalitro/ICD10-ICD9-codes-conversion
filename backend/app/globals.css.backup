@import "tailwindcss";

/* Professional Technical Design System */
:root {
  --color-primary: #1e3a8a;
  --color-primary-hover: #1e40af;
  --color-secondary: #475569;
  --color-border: #e2e8f0;
  --color-bg-subtle: #f8fafc;
  --color-success: #059669;
  --color-warning: #d97706;
  --color-error: #dc2626;
  --color-info: #0284c7;
}

/* Minimal professional animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.animate-fadeIn {
  animation: fadeIn 0.2s ease-out;
}

/* Professional buttons */
.btn-primary {
  background-color: var(--color-primary);
  color: white;
  font-weight: 500;
  font-size: 0.875rem;
  padding: 0.625rem 1.25rem;
  border-radius: 0.375rem;
  border: 1px solid var(--color-primary);
  transition: all 150ms;
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.btn-primary:hover {
  background-color: var(--color-primary-hover);
  border-color: var(--color-primary-hover);
}

.btn-primary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-secondary {
  background-color: white;
  color: var(--color-secondary);
  font-weight: 500;
  font-size: 0.875rem;
  padding: 0.625rem 1.25rem;
  border-radius: 0.375rem;
  border: 1px solid var(--color-border);
  transition: all 150ms;
}

.btn-secondary:hover {
  background-color: var(--color-bg-subtle);
  border-color: var(--color-secondary);
}

/* Dark mode button adjustments */
.dark .btn-secondary {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
  border-color: var(--border-color);
}

.dark .btn-secondary:hover {
  background-color: var(--bg-secondary);
}

/* Professional cards */
.card {
  background-color: white;
  border-radius: 0.5rem;
  box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  padding: 1.5rem;
  border: 1px solid var(--color-border);
}

.card-header {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 1rem;
  padding-bottom: 0.75rem;
  border-bottom: 1px solid var(--border-color);
}

/* Input fields */
.input {
  width: 100%;
  padding: 0.625rem 0.875rem;
  border: 1px solid var(--color-border);
  border-radius: 0.375rem;
  outline: none;
  transition: all 150ms;
  font-size: 0.875rem;
  font-family: 'Courier New', monospace;
}

.input:focus {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(30, 58, 138, 0.1);
}

.input:disabled {
  background-color: var(--color-bg-subtle);
  cursor: not-allowed;
}

/* Badges */
.badge {
  display: inline-block;
  padding: 0.25rem 0.625rem;
  font-size: 0.75rem;
  font-weight: 600;
  border-radius: 0.25rem;
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.badge-primary {
  background-color: #dbeafe;
  color: var(--color-primary);
  border: 1px solid #bfdbfe;
}

.badge-secondary {
  background-color: #f1f5f9;
  color: var(--color-secondary);
  border: 1px solid #e2e8f0;
}

.badge-success {
  background-color: #d1fae5;
  color: var(--color-success);
  border: 1px solid #a7f3d0;
}

.badge-warning {
  background-color: #fef3c7;
  color: var(--color-warning);
  border: 1px solid #fde68a;
}

.badge-error {
  background-color: #fee2e2;
  color: var(--color-error);
  border: 1px solid #fecaca;
}

.badge-info {
  background-color: #e0f2fe;
  color: var(--color-info);
  border: 1px solid #bae6fd;
}

/* Code display */
.code-display {
  font-family: 'Courier New', Courier, monospace;
  background-color: var(--color-bg-subtle);
  padding: 0.125rem 0.375rem;
  border-radius: 0.25rem;
  font-size: 0.875rem;
  border: 1px solid var(--color-border);
}

/* Tables */
.table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.875rem;
}

.table th {
  text-align: left;
  padding: 0.75rem;
  background-color: var(--color-bg-subtle);
  border-bottom: 2px solid var(--color-border);
  font-weight: 600;
  color: var(--color-secondary);
  text-transform: uppercase;
  font-size: 0.75rem;
  letter-spacing: 0.05em;
}

.table td {
  padding: 0.75rem;
  border-bottom: 1px solid var(--color-border);
}

.table tr:hover {
  background-color: var(--color-bg-subtle);
}

/* Status indicators */
.status-indicator {
  display: inline-block;
  width: 0.5rem;
  height: 0.5rem;
  border-radius: 50%;
  margin-right: 0.5rem;
}

.status-active {
  background-color: var(--color-success);
}

.status-warning {
  background-color: var(--color-warning);
}

.status-error {
  background-color: var(--color-error);
}

/* Clinical Alerts */
.clinical-alert {
  border-left: 4px solid;
  padding: 1rem;
  margin: 1rem 0;
  border-radius: 0.375rem;
}

.clinical-alert-critical {
  background: #fef2f2;
  border-color: #dc2626;
}

.clinical-alert-warning {
  background: #fffbeb;
  border-color: #d97706;
}

.clinical-alert-info {
  background: #eff6ff;
  border-color: #2563eb;
}

.clinical-alert-success {
  background: #f0fdf4;
  border-color: #059669;
}

/* Specificity Indicators */
.specificity-indicator {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.375rem 0.75rem;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.specificity-complete {
  background: #d1fae5;
  border: 1px solid #059669;
  color: #065f46;
}

.specificity-incomplete {
  background: #fef3c7;
  border: 1px solid #d97706;
  color: #92400e;
}

.specificity-header {
  background: #fee2e2;
  border: 1px solid #dc2626;
  color: #991b1b;
}

/* Quick action buttons */
.btn-icon {
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.5rem 0.75rem;
  font-size: 0.75rem;
  font-weight: 500;
  border-radius: 0.25rem;
  border: 1px solid var(--color-border);
  background: white;
  transition: all 150ms;
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.btn-icon:hover {
  background: var(--color-bg-subtle);
  border-color: var(--color-secondary);
}

/* Clinical context section */
.clinical-context {
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 0.5rem;
  padding: 1rem;
  margin: 1rem 0;
}

.clinical-context-header {
  font-size: 0.75rem;
  font-weight: 600;
  color: #475569;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.75rem;
}

/* Code relationship tree */
.code-tree {
  font-family: 'Courier New', monospace;
  font-size: 0.813rem;
  line-height: 1.6;
  padding-left: 1rem;
  border-left: 2px solid #e2e8f0;
  margin-left: 0.5rem;
}

.code-tree-item {
